<Window x:Class="CreateEconomyFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Economy Files" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Enter the root element name:" Grid.Row="0"/>
        <TextBox x:Name="RootElementNameTextBox" Grid.Row="1"/>

        

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Content="Select the CSV file:"/>
            <Button Content="Browse..." Click="BrowseButton_Click"/>
            <TextBox x:Name="CSVFilePathTextBox" Text="{Binding CSVFilePath}" Margin="5,0,0,0" VerticalAlignment="Center" IsReadOnly="True" Width="300"/>
        </StackPanel>

        <Button Content="Execute" Click="ExecuteButton_Click" Grid.Row="5" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
